{
  "compilerOptions": {
    "outDir": "./dist"
    ,"sourceMap": true //保留映射文件，方便调试
    ,"noImplicitAny": true //没有隐式的any
    ,"module": "commonjs"
    ,"target": "es5"
    ,"jsx": "react"
    ,"allowJs": true //允许ts工程中编译js代码
    ,"checkJs": false //以ts的标准检查js
  },"include": ["./src/**/*"]
  ,"exclude": ["node_modules"]
}
